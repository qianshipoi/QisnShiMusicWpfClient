<UserControl x:Class="QianShi.Music.Views.Dialogs.LoadingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QianShi.Music.Views.Dialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="140">

    <StackPanel Margin="16">
        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    HorizontalAlignment="Center" Margin="16"
                                    IsIndeterminate="True"
                                    Value="0" />
        <TextBlock Text="Loading..." HorizontalAlignment="Center"  
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
    </StackPanel>
</UserControl>
