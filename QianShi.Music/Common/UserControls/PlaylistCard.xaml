<UserControl x:Class="QianShi.Music.Common.UserControls.PlaylistCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QianShi.Music.Common.UserControls"
             xmlns:conver="clr-namespace:QianShi.Music.Common.Converters"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="210">
    <UserControl.Resources>
        <ResourceDictionary>
            <conver:NumberConverter x:Key="NumberConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Border CornerRadius="10" BorderThickness="0" ClipToBounds="True" Background="White">
        <StackPanel>
            <Border CornerRadius="10" BorderThickness="0"
                    Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" 
                    Cursor="Hand" Margin="0,0,0,10">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding RelativeSource={RelativeSource AncestorType=local:PlaylistCard}, Path=Cover}" />
                </Border.Background>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseUp" >
                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=local:PlaylistCard},Path=OpenPlaylistCommand}"
                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:PlaylistCard}, Path=Playlist}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Border>
            <WrapPanel Opacity="0.58" x:Name="PlayCountControl" Visibility="Collapsed">
                <materialDesign:PackIcon Kind="Play" />
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:PlaylistCard}, Path=AmountOfPlay, Converter={StaticResource NumberConverter}}" 
                           FontSize="12" />
            </WrapPanel>
            <TextBlock Margin="2,0" FontSize="16" 
                       Text="{Binding RelativeSource={RelativeSource AncestorType=local:PlaylistCard}, Path=Title}" 
                       FontWeight="Bold" Cursor="Hand" TextWrapping="WrapWithOverflow" MaxHeight="40" />
            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=local:PlaylistCard}, Path=Description}" 
                       x:Name="DescriptionControl" Margin="2,2,0,0" Visibility="Collapsed"
                       Opacity=".68" FontSize="12px" />
        </StackPanel>
    </Border>
</UserControl>
